@model UnicaesGestion.PerfilContratacion

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/Content/assets/bootstrap-wysihtml5/bootstrap-wysihtml5.css" rel="stylesheet" />
<link href="~/Content/assets/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" />
<link href="~/Content/assets/bootstrap-timepicker/compiled/timepicker.css" rel="stylesheet" />
<link href="~/Content/assets/bootstrap-daterangepicker/daterangepicker-bs3.css" rel="stylesheet" />
<link href="~/Content/assets/bootstrap-datetimepicker/css/datetimepicker.css" rel="stylesheet" />

<!--Encabezado Perfil de Contratacion-->
<section id="main-content">
    <section class="wrapper site-min-height">
        <!-- page start-->
        <section class="panel">
            <header class="panel-heading">
                Nuevo Perfil de Contratacion
            </header>

            <div class="panel-body">
                <div class="form">
                    <form class="cmxform form-horizontal tasi-form"  method="post" action="/PerfilContratacions/Create">                                  
                        
                        <div class="form-group">
                            <label class="control-label col-md-3">Fecha de Elaboracion</label>
                            <div class="col-md-3 col-xs-11">
                                <div id="fechaElavoracion" data-date-viewmode="years" data-date-format="dd-mm-yyyy" data-date="12-02-2012"
                                     class="input-append date dpYears">
                                    <input type="text" readonly="" name="fechaElaboracion" id="fechaElaboracion" value="12-02-2018" size="16" class="form-control">
                                    <span class="input-group-btn add-on">
                                        <button class="btn btn-danger" type="button"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                                <span class="help-block">Seleccionar fecha</span>
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="unidad" class="control-label col-lg-2">Analista Responsable</label>
                            <div class="col-lg-10">
                                <input class=" form-control" id="analista" name="analista" type="text" />
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="password" class="control-label col-lg-2">Aprobado Por</label>
                            <div class="col-lg-10">
                                <input class=" form-control" id="aprobadoPor" name="aprobadoPor" type="text" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">Fecha de Aprobacion</label>
                            <div class="col-md-3 col-xs-11">
                                <div id="fechaAprobacion" data-date-viewmode="years" data-date-format="dd-mm-yyyy" data-date="12-02-2012"
                                     class="input-append date dpYears">
                                    <input type="text" readonly="" id="fecha" name="fecha" value="12-02-2018" size="16" class="form-control">
                                    <span class="input-group-btn add-on">
                                        <button class="btn btn-danger" type="button"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                                <span class="help-block">Seleccionar fecha</span>
                            </div>
                        </div>                   

                        <div class="modal-footer">
                            <button data-dismiss="modal" class="btn btn-default" type="button">Cancelar</button>
                            @*<button class="btn btn-success" type="submit" value="Create">Agregar</button>*@
                            <input class="btn btn-success" type="submit" value="Create" />
                        </div>
                
                    </form>
                </div>
               
            </div>      

          

        </section>
        <!-- page end-->
    </section>
</section>
<!--Fin encabezado-->


<!--Start JavaScript-->
@section JavaScript {

    <!--this page plugins-->
    <script src="~/Content/assets/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>

    <!--this page  script only-->
    <script src="~/Content/js/form-component.js"></script>

    <!--select2-->
    <script type="text/javascript">

    $(document).ready(function () {
        $(".js-example-basic-single").select2();

        $(".js-example-basic-multiple").select2();
    });
    </script>
}
<!--End JavaScript-->



