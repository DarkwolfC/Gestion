                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-2 control-label">Activo</label>
                                    <div class="col-lg-10">
                                        <input class=" form-control" name="puesto.activo" id="activo" value="@Model.puesto.activo" type="radio" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-2 control-label">Aprobado</label>
                                    <div class="col-lg-10">
                                        <input class=" form-control" name="puesto.aprobado" id="aprobado" value="@Model.puesto.aprobado" type="radio" />
                                    </div>
                                </div>

                            </fieldset>


                            <fieldset title="Paso 2" class="step" id="default-step-1">
                                <legend> </legend>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Usuario</label>
                                    <div class="col-lg-10">
                                        <input type="text" class="form-control" placeholder="Usuario">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Correo Electronico</label>
                                    <div class="col-lg-10">
                                        <input type="text" class="form-control" placeholder="Correo Electronico">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Contraseña</label>
                                    <div class="col-lg-10">
                                        <input type="text" class="form-control" placeholder="Contraseña">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Confirmar Contraseña</label>
                                    <div class="col-lg-10">
                                        <input type="text" class="form-control" placeholder="Confirmar Contraseña">
                                    </div>
                                </div>

                            </fieldset>

                            <fieldset title="Paso 3" class="step" id="default-step-2">
                                <legend> </legend>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Nombre Completo</label>
                                    <div class="col-lg-10">
                                        <p class="form-control-static">José Vásquez</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Puesto de Trabajo</label>
                                    <div class="col-lg-10">
                                        <p class="form-control-static">Contador</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Usuario</label>
                                    <div class="col-lg-10">
                                        <p class="form-control-static">2013VC601</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Correo</label>
                                    <div class="col-lg-10">
                                        <p class="form-control-static">Jose.vasquez@gmail.es</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Contraseña</label>
                                    <div class="col-lg-10">
                                        <p class="form-control-static">123456</p>
                                    </div>
                                </div>
                            
                            </fieldset>

                            <input type="submit" class="finish btn btn-danger" value="Finalizar" />
                        }
                       
                    </div>
                </section>
            </div>
        </div>
        <!-- page end-->
    </section>
</section>
