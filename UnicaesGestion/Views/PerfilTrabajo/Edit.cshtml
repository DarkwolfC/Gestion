                                <legend> </legend>
                                <div class="form-group row">
                                    <label class="col-lg-2 control-label">Titulo</label>
                                    <div class="col-lg-10">
                                        <input class=" form-control" name="puesto.titulo" id="titulo" value="@Model.puesto.titulo" type="text" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-2 control-label">Objetivo</label>
                                    <div class="col-lg-10">
                                        <textarea class="form-control" id="objetivo" name="pues.objetivo" rows="3">@Model.puesto.objetivo</textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 control-label col-lg-2" for="inputSuccess">Jefe Inmediato</label>
                                    <div class="col-lg-10">
                                        @Html.DropDownListFor(lst => lst.Id, (Model.cmbJefeInmediato).Select(m => new SelectListItem { Text = m.titulo, Value = m.id.ToString() }), htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 control-label col-lg-2" for="inputSuccess">Unidad</label>
                                    <div class="col-lg-10">
                                        @Html.DropDownListFor(lst => lst.Id, (Model.cmbUnidades).Select(m => new SelectListItem { Text = m.nombre, Value = m.id.ToString() }), htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 control-label col-lg-2" for="inputSuccess">Tipo de Puesto</label>
                                    <div class="col-lg-10">
                                        @Html.DropDownListFor(lst => lst.Id, (Model.cmbTipoPuesto).Select(m => new SelectListItem { Text = m.tipo, Value = m.Id.ToString() }), htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>

