@using (Html.BeginForm("SaveEdit", "PerfilTrabajo", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @*<input type="hidden" name="id" value="@Model.Id" />*@

      <section id="main-content">
        <section class="wrapper site-min-height">
            <!-- page start-->
            <section class="panel">
                <header class="panel-heading">
                    Nuevo Perfil de Trabajo
                </header>

                <div class="panel-body">
                    <div class="form">

                        <div class="form-group ">
                            <label for="unidad" class="control-label col-lg-2">Titulo del Puesto</label>
                            <div class="col-lg-10">
                                <input class=" form-control" name="puesto.titulo" id="titulo" value="@Model.puesto.titulo" type="text" />
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="objetivo" class="control-label col-lg-2">Objetivo</label>
                            <div class="col-lg-10">
                                <textarea class="form-control" id="objetivo" name="pues.objetivo" rows="3">@Model.puesto.objetivo</textarea>
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="password" class="control-label col-lg-2">Jefe Inmediato</label>
                            <div class="col-lg-10">

                                @Html.DropDownListFor(lst => lst.Id, (Model.cmbJefeInmediato).Select(m => new SelectListItem { Text = m.titulo, Value = m.id.ToString() }), htmlAttributes: new { @class = "form-control" })

                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="password" class="control-label col-lg-2">Unidad Organizativa</label>
                            <div class="col-lg-10">

                                <select id="idUnidad" name="puesto.idUnidad">
                                    @foreach (Unidad u in Model.cmbUnidades)
                                    {
                                        if (u.id == Model.puesto.idUnidad) {
                                            <option selected value="@u.id">@u.nombre</option>
                                        }
                                        else
                                        {
                                            <option value="@u.id">@u.nombre</option>
                                        }

                                    }
                                </select>
                                @*@Html.DropDownList("idUnidad", null, string.Empty, htmlAttributes: new { @class = "form-control" })*@
                            </div>
                        </div>



                        <div class="form-group ">
                            <label for="password" class="control-label col-lg-2">Tipo de Puesto</label>
                            <div class="col-lg-10">
                                @*@Html.DropDownList("idTipoPuesto", null, string.Empty, htmlAttributes: new { @class = "form-control" })*@
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">Fecha de Aprobacion</label>
                            <div class="col-md-3 col-xs-11">
                                <div id="fechaAprobacion" data-date-viewmode="years" data-date-format="dd-mm-yyyy" data-date="12-02-2012"
                                     class="input-append date dpYears">
                                    <input type="text" readonly="" id="fechaCreacion" name="fechaCreacion" value="12-02-2018" size="16" class="form-control">
                                    <span class="input-group-btn add-on">
                                        <button class="btn btn-danger" type="button"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                                <span class="help-block">Seleccionar fecha</span>
                            </div>
                        </div>



                        <div class="form-group ">
                            <label for="password" class="control-label col-lg-2">Activo</label>
                            <div class="col-lg-10">
                                @*@Html.EditorFor(model => model.activo)*@
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="password" class="control-label col-lg-2">Aprobado</label>
                            <div class="col-lg-10">
                                @*@Html.EditorFor(model => model.aprobado)*@
                            </div>
                        </div>


                        <div class="modal-footer row">
                            <div class="col-lg-offset-2 col-lg-10">

                                <button class="btn btn-danger" type="submit" value="Create">Guardar y Continuar</button>
                                <button class="btn btn-default">Cancelar</button>
                            </div>
                        </div>

                    </div>
                </div>



            </section>
            <!-- page end-->
        </section>
    </section>

}

