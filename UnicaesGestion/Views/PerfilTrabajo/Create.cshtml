@model UnicaesGestion.PuestoTrabajo

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/assets/bootstrap-wysihtml5/bootstrap-wysihtml5.css" rel="stylesheet" />
<link href="~/Content/assets/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" />
<link href="~/Content/assets/bootstrap-timepicker/compiled/timepicker.css" rel="stylesheet" />
<link href="~/Content/assets/bootstrap-daterangepicker/daterangepicker-bs3.css" rel="stylesheet" />
<link href="~/Content/assets/bootstrap-datetimepicker/css/datetimepicker.css" rel="stylesheet" />
<style>
    .oculta {
        display: none;
    }
</style>

<!--main content start-->
<section id="main-content">
    <section class="wrapper site-min-height">
        <!-- page start-->
        <section class="panel">
            <header class="panel-heading">
               Nuevo Perfil de Trabajo
            </header>



            <div class="panel-body">
                <div class="form">
                    <form class="cmxform form-horizontal tasi-form" method="post" action="/PerfilTrabajo/Create">

                        <div class="form-group ">
                            <label for="unidad" class="control-label col-lg-2">Titulo del Puesto</label>
                            <div class="col-lg-10">
                                <input class=" form-control" id="titulo" name="titulo" type="text" />
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="objetivo" class="control-label col-lg-2">Objetivo</label>
                            <div class="col-lg-10">
                                <textarea class="form-control" id="objetivo" name="objetivo" rows="3"></textarea>
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="password" class="control-label col-lg-2">Jefe Inmediato</label>
                            <div class="col-lg-10">
                                @Html.DropDownList("jefeInmediato", null, string.Empty, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="password" class="control-label col-lg-2">Unidad Organizativa</label>
                            <div class="col-lg-10">
                                @Html.DropDownList("idUnidad", null, string.Empty, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                     

                        <div class="form-group ">
                            <label for="password" class="control-label col-lg-2">Tipo de Puesto</label>
                            <div class="col-lg-10">
                                @Html.DropDownList("idTipoPuesto", null, string.Empty, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">Fecha de Aprobacion</label>
                            <div class="col-md-3 col-xs-11">
                                <div id="fechaAprobacion" data-date-viewmode="years" data-date-format="dd-mm-yyyy" data-date="12-02-2012"
                                     class="input-append date dpYears">
                                    <input type="text" readonly="" id="fechaCreacion" name="fechaCreacion" value="12-02-2018" size="16" class="form-control">
                                    <span class="input-group-btn add-on">
                                        <button class="btn btn-danger" type="button"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                                <span class="help-block">Seleccionar fecha</span>
                            </div>
                        </div> 

                    

                        <div class="form-group ">
                            <label for="password" class="control-label col-lg-2">Activo</label>
                            <div class="col-lg-10">
                                @Html.EditorFor(model => model.activo)
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="password" class="control-label col-lg-2">Aprobado</label>
                            <div class="col-lg-10">
                                @Html.EditorFor(model => model.aprobado)
                            </div>
                        </div>


                        <div class="modal-footer row">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-danger" type="submit" value="Create">Guardar y Continuar</button>
                                <button class="btn btn-default" >Cancelar</button>
                            </div>
                        </div>

                        @*<div class="form-group row" id="ejemplo" >
                            <div class="col-lg-10">
                                <button class="btn btn-danger" data-toggle="modal" href="#myModal" type="button"><i class="fa fa-plus "> Agregar Funcion</i></button>
                            </div>
                        </div>*@




                        @*@{ Html.RenderAction("Index", "FuncionPuestoTrabajo");}*@

                        @*<div class="form-group row">
                            <div class="col-lg-10">
                                <button class="btn btn-danger" data-toggle="modal" href="#myModal2" type="button"><i class="fa fa-plus "> Agregar Requisito</i></button>
                            </div>
                        </div>*@

                        @*@{ Html.RenderAction("Index", "Requisitos");}*@

                        @*<div class="form-group row">
                            <div class="col-lg-10">
                                <button class="btn btn-danger" data-toggle="modal" href="#myModal3" type="button"><i class="fa fa-plus "> Agregar Competencia</i></button>
                            </div>
                        </div>*@

                        @*@{ Html.RenderAction("Index", "CompetenciaPuesto");}*@

                        

                    </form>
                </div>
            </div>



        </section>
        <!-- page end-->
    </section>
</section>
<!--main content end-->


<!-- Modal Funciones ok-->
<div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Agregar Funcion</h4>
            </div>

            <div class="modal-body">
                <!--body start-->
                <div class="form">


                    @{
                       
                        var funcionTrabajo = ViewBag.idPuestoTrabajo;
                        Html.RenderPartial("_funciones", new ViewDataDictionary { { "idPuestoTrabajo", funcionTrabajo } });
                    }

                </div>

                <!--body end-->
            </div>

            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="button">Cancelar</button>
                <button class="btn btn-success" onclick="Enviar()" type="button">Guardar</button>

            </div>
        </div>
    </div>
</div>
<!-- modal -->

<!-- Modal Requisitos ok-->
<div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal2" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Requisito</h4>
            </div>

            <div class="modal-body">
                <!--body start-->
                <div class="form">


                    @{
                        var requisito = ViewBag.idCategoria;
                        Html.RenderPartial("_Requisitos", new ViewDataDictionary { { "idPuestoTrabajo", funcionTrabajo }, { "idCategoria", requisito } });
                    }

                </div>

                <!--body end-->
            </div>

            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="button">Cancelar</button>
                <button class="btn btn-success" onclick="Enviar()" type="button">Guardar</button>

            </div>
        </div>
    </div>
</div>
<!-- modal -->

<!-- Modal Competencias-->
<div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal3" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Competencias</h4>
            </div>

            <div class="modal-body">
                <!--body start-->
                <div class="form">


                    @{
                      
                        var competencia = ViewBag.idCompetencia;
                        Html.RenderPartial("_competencias", new ViewDataDictionary { { "idPuestoTrabajo", funcionTrabajo }, { "idCompetencia", competencia } });
                    }

                </div>

                <!--body end-->
            </div>

            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="button">Cancelar</button>
                <button class="btn btn-success" onclick="Enviar()" type="button">Guardar</button>

            </div>
        </div>
    </div>
</div>
<!-- modal -->






