@model UnicaesGestion.Procedimiento
@{
    ViewBag.Title = "AddProcedure";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!--Corregido-->

 <!--main content start-->
<section id="main-content">
    <section class="wrapper site-min-height">
        <!-- page start-->
        <section class="panel">
            <header class="panel-heading">
               Nuevo Procedimiento
            </header>

    

            <div class="panel-body">
                <div class="form">
                    <form class="cmxform form-horizontal tasi-form" id="signupForm" method="get" action="">
                        <div class="form-group ">
                            <label for="password" class="control-label col-lg-2">Unidad Organizativa</label>
                            <div class="col-lg-10">
                                <select class="form-control m-bot15">
                                    <option>Mantenimiento Menor de vehiculos</option>
                                    <option>Opción 2</option>
                                    <option>Opción 3</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="procedimiento" class="control-label col-lg-2">Procedimiento</label>
                            <div class="col-lg-10">                                
                               @Html.TextAreaFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", rows = "2", cols="120" } })
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="objetivoI" class="control-label col-lg-2">Objetivo Inicial</label>
                            <div class="col-lg-10">
                                @Html.TextAreaFor(model => model.objetivoInicial, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="objetivoF" class="control-label col-lg-2">Objetivo Final</label>
                            <div class="col-lg-10">
                                @Html.TextAreaFor(model => model.objetvioFinal, new { htmlAttributes = new { @class = "form-control" } })                                
                            </div>
                        </div>


                    </form>
                </div>
            </div>

           


            <div class="panel-body">
                <div class="adv-table editable-table ">
                    <div class="clearfix">                                         
                        <div class="btn-group">
                            <button class="btn btn-danger" data-toggle="modal" href="#myModal" type="button">
                            Agregar Paso <i class="fa fa-plus"></i>
                            </button>
                        </div>                 
                    </div>


                    <div class="space15"></div>

                    <div class="table-responsive">

                        <table class="table table-striped table-hover table-bordered" id="editable-sample">
                            <thead>
                                <tr>
                                    <th>Paso</th>
                                    <th>Resposable</th>
                                    <th>Descripción</th>
                                    <th>Predecesor</th>
                                    <th>Figura</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="">
                                    <td>1</td>
                                    <td>Mecanico</td>
                                    <td>
                                        Al iniciar las labores, se procede a asear los vehiculos y se efectuan las revisiones mecanicas de estos.                                    
                                    </td>
                                    <td></td>
                                    <td>Actividad</td>
                                </tr>
                                <tr class="">
                                    <td>2</td>
                                    <td>Mecanico</td>
                                    <td>Durante la revision se Observa lo siguiente:<br />
                                    1) Que las llantas tengan la presion adecuada.<br />
                                    2) Que las mangeras, las pastillas de frenos y la bateria esten funcionando adecuadamente.                                    
                                    </td>
                                    <td>1</td>
                                    <td>Actividad</td>
                                </tr>
                                <tr class="">
                                    <td>3</td>
                                    <td>Mecanico</td>
                                    <td>
                                    Si durante la revision observa que hay accesorios que no esten funcionando adecuadamente, procede
                                    a desmontar el o los accesorios que esten en mal estado.
                                    </td>
                                    <td>2</td>
                                    <td>Actividad</td>
                                </tr>
                               
                                <tr class="">
                                    <td>4</td>
                                    <td>Mecanico</td>
                                    <td>
                                    Elabora la requisicion del o de los repuestos, y efectua cotizaciones.
                                    </td>
                                    <td>3</td>
                                    <td>Actividad</td>
                                    
                                </tr>
                                <tr class="">
                                    <td>5</td>
                                    <td>Mecanico</td>
                                    <td>
                                    En base a la requisicion y cotizacion, solicita en contabilidad que se le emita la orden de 
                                    compra de los repuestos.
                                    </td>
                                    <td>4</td>
                                    <td>Actividad</td>
                                </tr>
                                <tr class="">
                                    <td>6</td>
                                    <td>Auxiliar Contable</td>
                                    <td>
                                      Emite la orden de compra y la pasa al Director Administrativo para su autorizacion.    
                                    </td>
                                    <td>5</td>
                                    <td>Actividad</td>
                                </tr>
                                <tr class="">
                                    <td>7</td>
                                    <td>Director Administrativo</td>
                                    <td>
                                     Revisa los documentos, y si estan en orden, los autoriza, pero cuando el costo de los repuestos sea igual
                                       o mayor de $300, la requisicion debe llevar el visto del Vicerrector General.
                                    </td>
                                    <td>6</td>
                                    <td>Actividad</td>
                                </tr>
                                <tr class="">
                                    <td>8</td>
                                    <td>Mecanico</td>
                                    <td>
                                     Con la orden de compra autorizada, adquiere el o los repuestos con el proveedor autorizado.
                                    </td>
                                    <td>7</td>
                                    <td>Actividad</td>
                                </tr>
                                <tr class="">
                                    <td>9</td>
                                    <td>Mecanico</td>
                                    <td>
                                      Adquirido el o los repuestos, procede a efectuar la reparacion menor del vehiculo.
                                    </td>
                                    <td>8</td>
                                    <td>Actividad</td>
                                 </tr>
                                <tr class="">
                                    <td>10</td>
                                    <td>Mecanico</td>
                                    <td>
                                     Efectuadas las reparaciones menores, las anota en la bitacora anual que se lleva de cada vehiculo, para
                                     su control
                                    </td>
                                    <td>9</td>
                                    <td>Actividad</td>
                                   
                                </tr>
                               
                            </tbody>
                        </table>

                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-danger" type="submit">Guardar</button>
                                <button class="btn btn-default" type="button">Cancelar</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
           
            
            <!-- Modal -->
            <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">Agregar Nuevo Paso</h4>
                        </div>

                        <div class="modal-body">
                            <!--body start-->
                            <div class="form">
                                <form class="cmxform form-horizontal tasi-form" id="signupForm" method="get" action="">

                                    <div class="form-group">
                                        <label class="control-label col-md-3">No. paso</label>
                                        <div class="col-md-2">                                            
                                                <input class=" form-control" id="npaso"  name="unidad" type="text" />
                                         </div>
                                    </div>


                                    <div class="form-group ">
                                        <label for="password" class="control-label col-lg-2">Responsable</label>
                                        <div class="col-lg-10">
                                            <select class="form-control m-bot15" id="cbxResponsable">
                                                <option>Mecanico</option>
                                                <option>Auxiliar Contable</option>
                                                <option>Director Administrativo</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group ">
                                        <label for="unidad" class="control-label col-lg-2">Descripcion</label>
                                        <div class="col-lg-10">
                                            <textarea class="form-control" id="descripcion" name="procedimiento" rows="2"> Al iniciar las labores, se procede a asear los vehiculos y se efectuan las revisiones mecanicas de estos.</textarea>

                                        </div>
                                    </div>

                                    <div class="form-group ">
                                        <label for="password" class="control-label col-lg-2">Figura</label>
                                        <div class="col-lg-10">
                                            <select class="form-control m-bot15" id="figura">
                                                <option>Acttividad</option>
                                                <option>Decision</option>
                                                <option>Documento</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group last">
                                        <label class="control-label col-md-3">Dependencias: </label>
                                        <div class="col-md-9">
                                            <select name="country" class="multi-select" multiple="" id="my_multi_select1">
                                                <option value="AF">1</option>
                                                <option value="AL">2</option>
                                                <option value="DZ">3</option>
                                                <option value="AS">4</option>
                                                <option value="AD">5</option>
                                                <option value="AO">6</option>
                                                <option value="AI">7</option>
                                                <option value="AQ">8</option>
                                                <option value="AR">9</option>
                                                <option value="AM">10</option>
                                                <option value="AW">11</option>
                                                <option value="AU">12</option>
                                             </select>
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <!--body end-->
                        </div>

                        <div class="modal-footer">
                            <button data-dismiss="modal" class="btn btn-default" type="button">Cancelar</button>
                            <button class="btn btn-success" onclick="Obtener()" type="button">Agregar</button>

                        </div>
                    </div>
                </div>
            </div>
            <!-- modal -->

        </section>
        <!-- page end-->
    </section>
</section>
<!--main content end-->

<!--Start JavaScript-->
@section JavaScript {
<script src="~/Content/js/ModalFunction.js"></script>

    <script>
        $(document).ready(function () {
            EditableTable.init();
        });
    </script>
}
<!--End JavaScript-->