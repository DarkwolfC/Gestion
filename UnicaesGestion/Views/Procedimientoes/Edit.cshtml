@model UnicaesGestion.Procedimiento

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--main content start-->
<section id="main-content">
    <section class="wrapper site-min-height">
        <!-- page start-->
        <section class="panel">
            <header class="panel-heading">
                Editar Procedimiento
            </header>


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <div class="panel-body">              
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                        <div class="form-group row">
                            <label for="procedimiento" class="control-label col-lg-2">Procedimiento</label>
                            <div class="col-lg-10">
                               @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="objetivoI" class="control-label col-lg-2">Objetivo Inicial</label>
                            <div class="col-lg-10">
                                @Html.TextAreaFor(model => model.objetivoInicial, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row ">
                            <label for="objetivoF" class="control-label col-lg-2">Objetivo Final</label>
                            <div class="col-lg-10">
                                @Html.TextAreaFor(model => model.objetvioFinal, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-danger" type="submit" value="Save">Guardar</button>
                                <button class="btn btn-default" type="submit" value="Create">Cancelar</button>
                            </div>
                        </div>

                    @*</form>
                </div>*@
                }

                <div class="form-group row">
                    <div class="col-lg-10">
                        <button class="btn btn-danger" data-toggle="modal" href="#myModal" type="button"><i class="fa fa-plus "> Agregar Funcion</i></button>
                    </div>
                </div>
              
            </div>


            @{ Html.RenderAction("Index", "Pasoes");}

          

        </section>
        <!-- page end-->
    </section>
</section>
<!--main content end-->



<!-- Modal -->
<div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Agregar Proceso</h4>
            </div>

            <div class="modal-body">
                <!--body start-->
                <div class="form">


                    @{
//var procedimiento = ViewBag.idProcedimiento;
//var paso = ViewBag.idTipoPaso;
//var responsable = ViewBag.idPuestoTrabajo;
//Html.RenderPartial("_Paso", new ViewDataDictionary { { "idProcedimiento", procedimiento }, { "idTipoPaso", paso }, { "idPuestoTrabajo", responsable } });
                    }

                </div>

                <!--body end-->
            </div>

            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="button">Cancelar</button>
                <button class="btn btn-success" onclick="Enviar()" type="button">Guardar</button>

            </div>
        </div>
    </div>
</div>
