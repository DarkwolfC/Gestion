                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="objetivoI" class="control-label col-lg-2">Predecesores</label>
                            <div class="col-lg-10">
                                @Html.EditorFor(model => model.predecesores, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="objetivoF" class="control-label col-lg-2">Procedimiento</label>
                            <div class="col-lg-10">
                                @Html.DropDownList("idProcedimiento", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row ">
                            <label for="objetivoF" class="control-label col-lg-2">Tipo Paso</label>
                            <div class="col-lg-10">
                                @Html.DropDownList("idTipoPaso", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="objetivoF" class="control-label col-lg-2">Tipo Paso</label>
                            <div class="col-lg-10">
                                @Html.DropDownList("idPuestoTrabajo", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-danger" type="submit" value="Create">Guardar</button>
                                <button class="btn btn-default" type="submit" value="Create">Cancelar</button>
                            </div>
                        </div>

                    @*</form>
                </div>*@
                }
            </div>


        </section>
        <!-- page end-->
    </section>
</section>
