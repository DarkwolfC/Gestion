@model UnicaesGestion.Role

@{
    ViewBag.Title = "Crear Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .contenido_mantenimientos {      
        width: 50%;
        margin-left: auto;
        margin-right: auto;
        padding-top: 80px;
    }

        .contenido_mantenimientos h3 {
            color: #0094ff;
        }

</style>
<div class="contenido_mantenimientos" >
        <h3>Crear nuevo rol</h3> 

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">         
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
             
                <label  class="control-label col-md-2">Nombre del Rol:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Role1, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Role1, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <br/>
    <div>
        @Html.ActionLink("Regresar al listado de roles", "Index")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
