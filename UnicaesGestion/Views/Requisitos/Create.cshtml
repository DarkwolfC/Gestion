@model UnicaesGestion.Requisito

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!--main content start-->
<section id="main-content">
    <section class="wrapper site-min-height">
        <!-- page start-->
        <section class="panel">
            <header class="panel-heading">
                Requisito
            </header>

            <div class="panel-body">
                <div class="form">
                    <form class="cmxform form-horizontal tasi-form" method="Post" action="/Requisitos/Create">

                        <div class="form-group ">
                            <label for="procedimiento" class="control-label col-lg-2">Puesto de Trabajo</label>
                            <div class="col-lg-10">
                                @Html.DropDownList("idPuestoTrabajo", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="objetivoI" class="control-label col-lg-2">Criterio</label>
                            <div class="col-lg-10">
                                @Html.DropDownList("idCategoria", null, string.Empty, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="procedimiento" class="control-label col-lg-2">Descripcion</label>
                            <div class="col-lg-10">
                                <textarea class="form-control" id="descripcion" name="descripcion" rows="3"> </textarea>
                            </div>
                        </div>

                       
                      
                        <div class="modal-footer">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-danger" type="submit" value="Create">Guardar</button>
                                <button class="btn btn-default" type="submit" value="Create">Cancelar</button>
                            </div>
                        </div>

                    </form>
                </div>
                @{ Html.RenderAction("Index", "Requisitos");}

                <div class="modal-footer">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button class="btn btn-danger" onclick="location.href='/CompetenciaPuesto/Create'">Siguiente</button>                      
                    </div>
                </div>
            </div>


        </section>
        <!-- page end-->
    </section>
</section>
<!--main content end-->

<!--Start JavaScript-->
@section JavaScript {
    <script src="~/Content/js/ModalFunction.js"></script>

    <script>
        $(document).ready(function () {
            EditableTable.init();
        });
    </script>

<script>
        $(".eliminar").click(function () {
            var clave = $(this).data("funcion-id")
            var valor = { "id": clave }


            var nuevo = $($($(this).parent()).parent()).parent()
            $(this).closest('tr').remove();
            console.log(nuevo)

            $.ajax({
                type: "Post",
                url: "/Requisitos/Delete",
                data: valor,
                success: function () {
                    console.log("ok")
                },
                error: function () { }

            })
        })

</script>
}



