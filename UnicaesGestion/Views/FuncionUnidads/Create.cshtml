@model UnicaesGestion.FuncionUnidad

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!--main content start-->
<section id="main-content">
    <section class="wrapper site-min-height">
        <!-- page start-->
        <section class="panel">
            <header class="panel-heading">
                Funcion del Puesto de Trabajo
            </header>

            <div class="panel-body">
                <div class="form">
                    <form class="cmxform form-horizontal tasi-form" id="signupForm" method="Post" action="/FuncionUnidads/Create">

                        <div class="form-group ">
                            <label for="objetivoF" class="control-label col-lg-2">Unidad</label>
                            <div class="col-lg-10">
                                @Html.DropDownList("idUnidad", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="procedimiento" class="control-label col-lg-2">Funcion</label>
                            <div class="col-lg-10">
                                <textarea class="form-control" id="descripcion" name="descripcion" rows="3"> </textarea>
                            </div>
                        </div>


                        <div class="modal-footer">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-danger" type="submit" value="Create">Guardar</button>
                                <button class="btn btn-default" type="submit" value="Create">Cancelar</button>
                            </div>
                        </div>

                    </form>
                </div>
                @{ Html.RenderAction("Index", "FuncionUnidads");}

                <div class="modal-footer">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button class="btn btn-danger" type="submit" value="Create">Finalizar</button>                      
                    </div>
                </div>
            </div>


        </section>
        <!-- page end-->
    </section>
</section>
<!--main content end-->

