@model UnicaesGestion.PuestoTrabajo

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" href="~/Content/assets/data-tables/DT_bootstrap.css" />

<!--main content start-->
<section id="main-content">
    <section class="wrapper site-min-height">
        <!-- page start-->
        <section class="panel">
            <header class="panel-heading">
                Editar Puesto de Trabajo
            </header>

         

            <div class="panel-body">
                <div class="form">
                    <form class="cmxform form-horizontal tasi-form"  method="post" action="/PuestoTrabajoes/Create">

                        <div class="form-group ">
                            <label for="unidad" class="control-label col-lg-2">Titulo del Puesto</label>
                            <div class="col-lg-10">
                                <input class=" form-control" id="titulo" name="titulo" type="text" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="password" class="control-label col-lg-2">Unidad Organizativa</label>
                            <div class="col-lg-10">
                                @Html.DropDownList("idUnidad", null, htmlAttributes: new { @class = "form-control" })
                             </div>
                            </div>

                        <div class="form-group ">
                            <label for="password" class="control-label col-lg-2">Jefe Inmediato</label>
                            <div class="col-lg-10">
                                @Html.DropDownList("jefeInmediato", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="password" class="control-label col-lg-2">Tipo de Puesto</label>
                            <div class="col-lg-10">
                                @Html.DropDownList("idTipoPuesto", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="objetivo" class="control-label col-lg-2">Objetivo</label>
                            <div class="col-lg-10">
                                <input class=" form-control" id="objetivo" name="objetivo" type="text" />
                            </div>
                        </div>
                       
                        <div class="form-group ">
                            <label for="password" class="control-label col-lg-2">Tipo de Puesto</label>
                            <div class="col-lg-10">
                                @Html.DropDownList("idPerfilContratacion", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-lg-10">
                                <button class="btn btn-danger" data-toggle="modal" href="#myModal" type="button"><i class="fa fa-plus "> Agregar Funcion</i></button>
                            </div>
                        </div>


                        @{ Html.RenderAction("Index", "FuncionPuestoTrabajoes");}

                        <div class="form-group row">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-danger" type="submit" value="Create">Guardar</button>
                                <button class="btn btn-default" type="submit" value="Create">Cancelar</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>


         
        </section>
        <!-- page end-->
    </section>
</section>
<!--main content end-->


<!-- Modal -->
<div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Agregar Funcion</h4>
            </div>

            <div class="modal-body">
                <!--body start-->
                <div class="form">


                    @{
                        //var funcionTrabajo = ViewBag.idPuestoTrabajo;
                        var funcionTrabajo= ViewBag.jefeInmediato;
                        Html.RenderPartial("_funciones", new ViewDataDictionary { { "idPuestoTrabajo", funcionTrabajo }});
                    }

                </div>

                <!--body end-->
            </div>

            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="button">Cancelar</button>
                <button class="btn btn-success" onclick="Enviar()" type="button">Guardar</button>

            </div>
        </div>
    </div>
</div>
<!-- modal -->






<!--Start JavaScript-->
@section JavaScript {

    <script>
                function Enviar() {
                    //console.log('asasasasa');
                    //console.log($('#funcion'));
                    $('#funcion')[0].submit(function (event) {
                        //cons.log("loodsodosodosdos");
                        alert("Handler for .submit() called.");
                        event.preventDefault();
                    });
                }

    </script>

    <script>
        $(document).ready(function () {
            EditableColumn.init();
        });
    </script>
}
<!--End JavaScript-->








