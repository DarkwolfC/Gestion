@model UnicaesGestion.Criterio



@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!--start new code-->

<link href="~/Content/css/tasks.css" rel="stylesheet">

<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <!-- page start-->

        <div class="row">
            <section class="panel tasks-widget">
                <header class="panel-heading">
                   Agregar Criterios
                </header>
                <div class="panel-body">

                    <div class="task-content">

                        <div class="panel-body">
                           
                               @using (Html.BeginForm())
                               {
                                @Html.AntiForgeryToken()
                                <div class="form-group">                                   
                                    <button type="submit" class="btn btn-success col-sm-3 col-lg-2" id="agregarCriterio"><i class="fa fa-plus"> Agregar</i></button>
                                    <div class="col-lg-9">
                                        <div class="input-group m-bot15">
                                            <span class="input-group-btn">
                                                <button  class="btn btn-white" ><i class="fa  fa-file-o"></i></button>
                                            </span>
                                            @Html.EditorFor(model => model.criterio1, new { htmlAttributes = new { @class = "form-control", id = "inputcriterio" } })
                                        </div>

                                    </div>
                                </div>
                               }
                        </div>
                        @Html.Partial("_PartialList", new ViewDataDictionary( @ViewBag.lista))
                        @*@{ Html.RenderAction("Index");}*@
                                           
                    </div>
                </div>
            </section>
        </div>


      

    </section>
    <!-- page end-->
</section>

